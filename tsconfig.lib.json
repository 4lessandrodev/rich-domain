{
	"compilerOptions": {
		"module": "CommonJS",
		"noImplicitAny": false,
		"declaration": true,
		"removeComments": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipDefaultLibCheck": false,
		"skipLibCheck": false,
		"declarationMap": true,
		"sourceMap": true,
		"target": "ESNext",
		"strict": true,
		"lib": ["DOM", "ES6", "ESNext"],
		"outDir": "./dist",
	},
	"include": ["lib/*", "lib/**/*"],
	"exclude": ["/**/*.spec.ts", "/*.spec.ts", "tests", "*/tests"]
}
